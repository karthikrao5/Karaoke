
<!DOCTYPE html>

<div class="chat_container">
  <div id="room">
    <p class="alert"> Welcome to the chat room! </p>
  </div>

  <% if guest_user %>
      <div class="page-header">
        <h1>Join the discussion!</h1>
      </div>

      <%= render 'form' %>
      <div class="panel panel-default" id="messages">
        <div class="panel-body">
          <ul class="media-list">
            <%= render @messages %>
          </ul>
        </div>
      </div>
  <% end %>
</div>
